<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PasswordPreferenceActivity"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="@string/text_amount_to_save_preference_notices"
        android:layout_marginBottom="4dp"/>

    <fragment
        android:id="@+id/fgm_cockpit_chart_preferences_amount"
        class="com.dolinsek.elias.cashcockpit.AmountInputFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>