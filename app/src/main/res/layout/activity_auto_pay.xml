<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp">

    <fragment
        android:id="@+id/fgm_auto_pay_amount_input"
        class="com.dolinsek.elias.cashcockpit.AmountInputFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"/>

    <fragment
        android:id="@+id/fgm_auto_pay_name_input"
        class="com.dolinsek.elias.cashcockpit.DescriptionInputFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:hintText="@string/name"/>

    <fragment
        android:id="@+id/fgm_auto_pay_bank_account_and_bill_type_selection"
        class="com.dolinsek.elias.cashcockpit.BankAccountAndBillSelectionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@color/colorPrimaryLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_auto_pay_type"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"/>

            <Spinner
                android:id="@+id/spn_auto_pay_select_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <fragment
        android:id="@+id/fgm_auto_pay_category_selection"
        class="com.dolinsek.elias.cashcockpit.SelectCategoryFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"/>

</LinearLayout>
