<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_cockpit_content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:paddingTop="8dp" android:paddingBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <fragment
            android:id="@+id/fgm_cockpit_amount_input"
            class="com.dolinsek.elias.cashcockpit.AmountInputFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"/>

        <fragment
            android:id="@+id/fgm_cockpit_description_input"
            class="com.dolinsek.elias.cashcockpit.DescriptionInputFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"/>

        <fragment
            android:id="@+id/fgm_cockpit_select_category"
            class="com.dolinsek.elias.cashcockpit.SelectCategoryFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"/>

        <fragment
            android:id="@+id/fgm_cockpit_bank_account_and_bill_type_selection"
            class="com.dolinsek.elias.cashcockpit.BankAccountAndBillSelectionFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_cockpit_chart_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <fragment
            android:id="@+id/fgm_cockpit_chart"
            android:name="com.dolinsek.elias.cashcockpit.CockpitChartFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txv_cockpit_bill_creation_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:visibility="gone"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btn_cockpit_add_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:text="@string/btn_add_bill"
        android:src="@drawable/ic_add"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="2dp"/>

</LinearLayout>
